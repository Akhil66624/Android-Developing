
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" tools:context=".MainActivity">
    <CheckBox android:id="@+id/chkIos" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="ios"
        android:onClick="CheckboxClick"
        android:button="@mipmap/ic_launcher"
        />
    <CheckBox android:id="@+id/chkAndroid" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="android"
        android:checked="true" android:onClick="CheckboxClick"/>
    <CheckBox android:id="@+id/chkWindows" android:layout_width="wrap_content"
        android:text="windows"
        android:layout_height="wrap_content"
        android:onClick="CheckboxClick"/>
    <Button android:id="@+id/btnDisplay" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Display"

        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ncb"
        android:onClick="CheckboxClick"
        ></CheckBox>
</LinearLayout>